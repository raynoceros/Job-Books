<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfcf"
    android:focusableInTouchMode="true"
    android:touchscreenBlocksFocus="false"
    tools:context="com.jackong.jobbooks.EditCompanyInfo">

    <FrameLayout
        android:id="@+id/touchInterceptor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_box_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve_white"
            android:dropDownHeight="wrap_content"
            android:hint="Description.."
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="15dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/text_box_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve_white"
            android:hint="Address.."
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="15dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/text_box_contact"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve_white"
            android:hint="Contact.."
            android:inputType="number"
            android:maxLines="1"
            android:padding="15dp"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_save_company_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve_red_d50000"
            android:padding="5dp"
            android:text="@string/continue_button_text"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:onClick="EditCompanyOnClick"/>
    </LinearLayout>
</RelativeLayout>
