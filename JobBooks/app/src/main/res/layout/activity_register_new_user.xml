<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RegisterNewUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfcf"
    android:focusableInTouchMode="true"
    android:touchscreenBlocksFocus="false"
    tools:context="com.jackong.jobbooks.RegisterNewUser">

    <FrameLayout
        android:id="@+id/touchInterceptor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_box_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:allowUndo="false"
            android:background="@drawable/curve_white"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp"
            android:selectAllOnFocus="false"
            android:text="@string/default_text_register_name"
            android:textColor="#777c7c"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/text_box_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:allowUndo="false"
            android:background="@drawable/curve_white"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="15dp"
            android:selectAllOnFocus="false"
            android:text="@string/default_text_register_email"
            android:textColor="#777c7c"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/text_box_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:allowUndo="false"
            android:background="@drawable/curve_white"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp"
            android:selectAllOnFocus="false"
            android:text="@string/default_text_register_password"
            android:textColor="#777c7c"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/text_box_register_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:allowUndo="false"
            android:background="@drawable/curve_white"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp"
            android:selectAllOnFocus="false"
            android:text="@string/default_text_register_confirm_password"
            android:textColor="#777c7c"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/curve_red_d50000"
            android:onClick="RegisterNewUserOnClick"
            android:padding="5dp"
            android:text="@string/register_now_button_text"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/register_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
